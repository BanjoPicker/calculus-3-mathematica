Cell["\<\
Finally, we show how we can leverage Mathematica to actually perform the \
Solve for us.
We need to solve a system of 3 equations with 3 unknowns. Here is how we can \
input this system:\
\>", "Section",
 CellChangeTimes->{{3.968257639807611*^9, 
  3.9682576770491962`*^9}},ExpressionUUID->"88d0827b-70ad-4847-8f7e-\
2dbeccbb3ffa"],

Cell[BoxData[
 RowBox[{"Solve", "[", "\[IndentingNewLine]", 
  RowBox[{
   RowBox[{"{", "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{
      RowBox[{
       RowBox[{
        RowBox[{"Derivative", "[", 
         RowBox[{"1", ",", "0"}], "]"}], "[", "f", "]"}], "[", 
       RowBox[{"x", ",", "y"}], "]"}], "\[Equal]", 
      RowBox[{"\[Lambda]", " ", "*", 
       RowBox[{
        RowBox[{
         RowBox[{"Derivative", "[", 
          RowBox[{"1", ",", "0"}], "]"}], "[", "g", "]"}], "[", 
        RowBox[{"x", ",", "y"}], "]"}]}]}], ",", "\[IndentingNewLine]", 
     RowBox[{
      RowBox[{
       RowBox[{
        RowBox[{"Derivative", "[", 
         RowBox[{"0", ",", "1"}], "]"}], "[", "f", "]"}], "[", 
       RowBox[{"x", ",", "y"}], "]"}], "\[Equal]", 
      RowBox[{"\[Lambda]", " ", 
       RowBox[{
        RowBox[{
         RowBox[{"Derivative", "[", 
          RowBox[{"0", ",", "1"}], "]"}], "[", "g", "]"}], "[", 
        RowBox[{"x", ",", "y"}], "]"}]}]}], ",", "\[IndentingNewLine]", 
     RowBox[{
      RowBox[{"g", "[", 
       RowBox[{"x", ",", "y"}], "]"}], "\[Equal]", "5"}]}], 
    "\[IndentingNewLine]", "}"}], ",", "\[IndentingNewLine]", 
   RowBox[{"{", 
    RowBox[{"x", ",", "y", ",", "\[Lambda]"}], "}"}], ",", 
   "\[IndentingNewLine]", "Reals"}], "\[IndentingNewLine]", "]"}]], "Input",
